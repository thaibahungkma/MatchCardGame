<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity.TopicCard"
    android:background="@drawable/load1"
    android:orientation="horizontal"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/animalLinear"
        >
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_red_conner_top_left_right"
                android:gravity="center"
                android:padding="12dp"
                android:text="Animals"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="210dp"
            android:padding="2dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/costum_blue_btn">
            <ImageView
                android:layout_width="230dp"
                android:layout_height="130dp"
                android:background="@drawable/preview"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_play_circle_outline_24"
                android:background="@drawable/circle_btn_red"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="80dp"
        android:id="@+id/emojiLinear">
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_red_conner_top_left_right"
                android:gravity="center"
                android:padding="12dp"
                android:text="Emojis"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="210dp"
            android:padding="2dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/costum_blue_btn">
            <ImageView
                android:layout_width="230dp"
                android:layout_height="130dp"
                android:background="@drawable/emojiis"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_play_circle_outline_24"
                android:background="@drawable/circle_btn_red"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>