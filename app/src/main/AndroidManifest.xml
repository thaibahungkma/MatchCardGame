<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matchcardgame" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MatchCardGame" >
        <activity
            android:name=".Activity.Activity.GamePlayHard"
            android:exported="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".Activity.Activity.GamePlayMedium"
            android:exported="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".Activity.Activity.GamePlayEasy"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.Activity.SelectLevel"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.Activity.TopicCard"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.Activity.TutorialGame"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.Activity.load_screen"
            android:exported="true"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Activity.MainActivity"
            android:exported="true"
            android:screenOrientation="landscape" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>